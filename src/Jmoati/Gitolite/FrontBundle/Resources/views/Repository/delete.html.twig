{% extends 'JmoatiGitoliteFrontBundle::base.html.twig' %}
{% form_theme form 'JmoatiTwitterBootstrapBundle::form_theme.html.twig' %}

{% block container_content %}
    <form action="{{ path('jmoati_gitolite_front_repository_delete', {repository: repository.id}) }}"
          method="post" {{ form_enctype(form) }}>
        <legend>{% trans %}repository.delete.title{% endtrans %}</legend>
        <p>{% trans %}repository.confirm.delete{% endtrans %}</p>

        <p>
            <a href="{{ path('jmoati_gitolite_front_repository_index') }}">{% trans %}action.cancel{% endtrans %}</a>
            <button type="submit" class="btn btn-danger">{% trans %}action.delete{% endtrans %}</button>
        </p>
    </form>

{% endblock %}
