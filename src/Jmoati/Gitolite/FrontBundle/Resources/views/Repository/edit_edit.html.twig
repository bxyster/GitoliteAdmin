{% extends 'JmoatiGitoliteFrontBundle::base.html.twig' %}

{% block content %}
    <form action="{{ path('jmoati_gitolite_front_repository_edit', {repository: repository.id}) }}"
          method="post" {{ form_enctype(form) }}>
        <legend>{% trans %}repository.edit.title{% endtrans %}</legend>

        <div class="row">
            <div class="col-md-4">
                {{ form_rest(form) }}
            </div>
        </div>

        <p class="well" style="margin-top: 10px;">
            <a class="btn btn-default" href="{{ path('jmoati_gitolite_front_repository_index') }}">{% trans %}action.cancel{% endtrans %}</a>
            <button type="submit" class="btn btn-success">{% trans %}action.edit{% endtrans %}</button>
        </p>
    </form>
{% endblock %}
